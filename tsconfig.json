{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNEXT",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["./src/functions", "./src/interfaces"],
  "exclude": ["./src/assembly"]
}
